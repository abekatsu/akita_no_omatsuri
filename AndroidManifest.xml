<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.damburisoft.android.yamalocationsrv"
      android:versionCode="1"
      android:versionName="1.3.1">
    <application 
        android:label="@string/app_name"
        android:debuggable="true" android:icon="@drawable/hanten">
        <activity android:name=".YamaLocActivity"
                  android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <uses-library android:name="com.google.android.maps"></uses-library>
        <service android:name=".service.YamaLogService"
               android:process=":yamalogservice"
               android:label="Yama Log Service"
               android:icon="@drawable/icon"
               android:debuggable="true"
               android:enabled="true"
               android:exported="true" />
        <activity android:screenOrientation="portrait" android:name=".YamaPreferenceActivity" />
        <provider android:authorities="com.damburisoft.android.yamalocationsrv.provider.yamalocationprovider"
            android:name="com.damburisoft.android.yamalocationsrv.provider.YamaLocationProvider" />
        <provider android:authorities="com.damburisoft.android.yamalocationsrv.provider.eventinfoprovider"
            android:name="com.damburisoft.android.yamalocationsrv.provider.EventInfoProvider" />
            
    </application>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"></uses-permission>
    <uses-permission android:name="android.permission.CLEAR_APP_USER_DATA"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.SUBSCRIBED_FEEDS_READ"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4"/>
</manifest> 