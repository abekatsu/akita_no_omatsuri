<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/time_tv"  
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="@string/current_time" />
    <TextView
        android:id="@+id/azimuth_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/azimuth" />
    <TextView
        android:id="@+id/location_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/location" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/start_logging_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logging_start_button" />
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_log_button" />
        <Button
            android:id="@+id/quit_app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quit_button" />
    </LinearLayout>
    <com.google.android.maps.MapView
        android:id="@+id/yama_mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:apiKey="0nsrIPXPn5U7sLN4a1YmddJTVZqAAu5IIWz8cVw" />
</LinearLayout>
